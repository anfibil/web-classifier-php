{% extends "@ODEUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    {{ parent() }}

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content text-center p-md">

                        <h2><span class="text-navy">Congrats <b>{{ app.user.firstname }}</b> , your account has been activated.</span>
                            <br/>You can now use all ODE features.</h2>

                        <p>
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc ac suscipit metus. Fusce tincidunt mattis ex, condimentum sollicitudin enim blandit id.
                        </p>

                    </div>
                </div>
            </div>
        </div>
        <div class="row text-center">
            <a href="/" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-home"></span>&nbsp;&nbsp;Return to Homepage</a>
        </div>
    </div>
    {% if app.session is not empty %}
        {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
        {% if targetUrl is not empty %}<p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>{% endif %}
    {% endif %}
{% endblock %}