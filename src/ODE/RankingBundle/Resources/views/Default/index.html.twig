{% extends 'base.html.twig'%}

{% block body %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-12">
            <h2>Rankings by Dataset</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="/">Home</a>
                </li>
                <li class="active">
                    <strong>Rankings</strong>
                </li>
            </ol>
        </div>
    </div>

    <br>
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-xs-4 col-xs-offset-4">
                            <label>Select the dataset</label>
                            <select id="dataset" name="dataset" class="form-control required">
                                {% for dataset in datasets %}
                                    <option value={{ dataset.id|e }}>{{ dataset.name|e }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <br><br>
                    <table class="table table-striped table-bordered table-hover" id="preditions-table">
                        <thead>
                        <tr>
                            <th>User</th>
                            <th>Classifier</th>
                            <th>AUROC</th>
                            <th>AUPR</th>
                            <th>Runtime</th>
                        </tr>
                        </thead>
                        <tbody>
                            <span id="table_data"></span>
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>User</th>
                            <th>Classifier</th>
                            <th>AUROC</th>
                            <th>AUPR</th>
                            <th>Runtime</th>
                        </tr>
                        </tfoot>
                    </table>
                 </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block scripts %}
    {% javascripts
        'assets/js/plugins/dataTables/jquery.dataTables.js'
        'assets/js/plugins/dataTables/dataTables.bootstrap.js'
        'assets/js/plugins/dataTables/dataTables.tableTools.js'
        'assets/js/plugins/qTip/jquery.qtip.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript">
        $(document).ready(function() {
            $('#dataset').on('change', function (e) {
                jQuery.ajax({
                    dataType: "html",
                    url: "/ranking/"+ $('#dataset').val(),
                    data: "",
                    success: function(data){
                        $('#table_data').val(data);
                    }
                }).fail(function() {
                    alert("request fail");
                });
            });
        });
    </script>
{% endblock %}
